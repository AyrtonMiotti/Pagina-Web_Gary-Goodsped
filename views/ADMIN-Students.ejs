    <link rel="stylesheet" href="resources/css/normalize.css"/>
    <link rel="stylesheet" href="resources/css/style.css"/>
    <title>ADMIN | Students</title>
</head>
<body class="hidden">
    <!- Inicio del Header ->
    <header class="header">
        <nav class="nav">
          <a href="#" class="logo nav-link">
            <img class="logo-icon" src="resources/Assets/logo-cor.png" alt="Gary Goodsped">
          </a>
          <button class="nav-toggle" aria-label="Abrir menú">
            <i class="fas fa-bars"></i>
          </button>
          <ul class="nav-menu">
            <li class="nav-menu-item">
              <a href="land" class="nav-menu-link nav-link">Inicio</a>
            </li>
            <li class="nav-menu-item">
              <a href="#" class="nav-menu-link nav-link">Autogestión</a>
            </li>
            <li class="nav-menu-item">
              <a href="#" class="nav-menu-link nav-link">Sobre nosotros</a>
            </li>
            <li class="nav-menu-item">
              <a href="#" class="nav-menu-link nav-link nav-menu-link_active"
                >Contactanos</a
              >
            </li>
          </ul>
        </nav>
      </header>
    <!- Fin del Header ->
      
    <!- Menú Lateral Desplegable ->
      <div id="sidemenu" class="menu-collapsed">
        <!- Header ->
        <div id="header">
          <div id="menu-btn">
            <div class="btn-hamburger"></div>
            <div class="btn-hamburger"></div>
            <div class="btn-hamburger"></div>
          </div>
          <div id="title"><span>Gary Goodsped</span></div>
        </div>
    
        <!- PERFIL ->
        <div id="profile">
          <div id="photo"><img src="resources/Assets/ayrton.png" alt="Usuario"></div>
          <div id="name">
            <span>Ayrton</span>
            <div class="icon-edit">
              <a href="#">
                <img class="EditIcon" src="resources/Assets/EditIcon.svg" alt="Edit Profile">
              </a>
            </div>
          </div>
        </div>
  
        <!- ITEMS ->
        <div id="menu-items">
          <div class="item">
            <a href="#AS-Add" id="Btn1">
              <div class="icon first-icon">
                <img src="resources/Assets/matters.png" alt="Materias">
              </div>
              <div class="title">
                <span>Agregar</span>
              </div>
            </a>
          </div>
  
          <div class="item separator"></div>
  
          <div class="item">
            <a href="#AS-Edit" id='Btn2'>
              <div class="icon">
                <img src="resources/Assets/matters/(3).png" alt="Materias">
              </div>
              <div class="title">
                <span>Modificar</span>
              </div>
            </a>
          </div>
  
          <div class="item separator"></div>
  
          <div class="item">
            <a href="#AS-Remove" id="Btn3">
              <div class="icon">
                <img src="resources/Assets/matters.png" alt="">
              </div>
              <div class="title">
                <span>Eliminar</span>
              </div>
            </a>
          </div>
  
          <div class="item separator"></div>
  
          <div class="item close">
            <a class="exitLink" href="#">
              <div class="icon">
                <img class="ExitIcon" src="resources/Assets/exit.png" alt="Cerrar Sesión" style="width: 25px;">
              </div>
              <div class="title exitText">
                <span class="Add-span exitText">Cerrar Sesión</span>
              </div>
            </a>
          </div>
        </div>
      </div>
    <!- Fin Menú Lateral Desplegable ->

    <article class="AS-Add" id="AS-Add">
        <div class="add-container">
            <form action="#" class="form-add-s">
                <span class="Add-tittle">AGREGAR ALUMNO</span>
                <div class="Add-t-container">
                    <div class="Add-l-container">
                        <div class="group-name">
                            <span class="Add-span name-txt">Nombre:</span>
                            <input class="name-input" type="text" placeholder="Ingrese el/los Nombres" required>
                        </div>

                        <div class="group-dni">
                            <span class="Add-span dni-txt">DNI:</span>
                            <input class="dni-input" type="number" placeholder="Ingrese el DNI" required>
                        </div>

                        <div class="group-addres">
                            <span class="Add-span addres-txt">Dirección:</span>
                            <input class="addres-input" type="text" placeholder="Ingrese la Dirección" required>
                        </div>

                        <div class="group-gender">
                            <span class="Add-span gender-txt">Género:</span>
                            <select name="Género" id="gender-input">
                                <option value="M">Masculino</option>
                                <option value="F">Femenino</option>
                            </select>
                        </div>
                    </div>

                    <div class="Add-r-container">
                        <div class="group-surname">
                            <span class="Add-span surname-txt">Apellido:</span>
                            <input class="surname-input" type="text" placeholder="Ingrese el/los Apellidos" required>
                        </div>

                        <div class="group-date">
                            <span class="Add-span date-txt">Fecha Nacimiento:</span>
                            <input class="date-input" type="date" required>
                        </div>

                        <div class="AS-course">
                            <div class="group-course">
                                <span class="Add-span course-txt">Curso:</span>
                                <select name="Curso" id="course-input" class="course-input">
                                    <option value="Primer Año">Primer Año</option>
                                    <option value="Segundo Año">Segundo Año</option>
                                    <option value="Tercer Año">Tercer Año</option>
                                    <option value="Cuarto Año">Cuarto Año</option>
                                    <option value="Quinto Año">Quinto Año</option>
                                    <option value="Sexto Año">Sexto Año</option>
                                    <option value="Séptimo Año">Séptimo Año</option>
                                </select>
                                <span class="Add-span course-divition">División:</span>
                                <select name="División" id="divition-input">
                                    <option value="A">A</option>
                                    <option value="B">B</option>
                                    <option value="C">C</option>
                                </select>
                            </div>
                            
                        </div>
                    </div>
                </div>
                <div class="Add-b-container">
                    <input class="btn-cancel" type="button" value="Cancelar">
                    <input class="btn-save" type="button" value="Guardar">
                </div>
            </form>
        </div>
    </article>
    <article class="AS-Edit" id="AS-Edit">
        <div class="edit-container"><h1>Wenas1</h1></div>
    </article>
    <article class="AS-Remove" id="AS-Remove">
        <div class="remove-container"><h1>Wenas2</h1></div>
    </article>

      <script src="resources\Js\main.js"></script>
</body>
</html>